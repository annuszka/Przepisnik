<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Przepisnik</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <!-- navbar menu -->
    <nav class="navbar navbar-expand-lg navbar-light bg-info fixed-top">
        <!--  <a class="navbar-brand" href="#">Przepiśnik</a>  -->
        @Html.ActionLink("Przepisnik", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Kategorie
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>
            </ul>
            
            @Html.Partial("_LoginPartial")
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
            </form>

        </div>
    </nav> <!-- navbar end-->




    <div class="container body-content">

        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/banner1.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="display-4">Przepiśnik</h1>
                        <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/banner2.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="display-4">Przepiśnik</h1>
                        <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/banner3.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="display-4">Przepiśnik</h1>
                        <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/banner4.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block text-info">
                        <h1 class="display-4">Przepiśnik</h1>
                        <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/banner5.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block text-info">
                        <h1 class="display-4">Przepiśnik</h1>
                        <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                    </div>
                </div>
            </div>
        </div>


        <!-- jumbotron
            <div class="jumbotron mt-5">
                <div class="container text-info">
                    <h1 class="display-4">Przepiśnik</h1>
                    <p class="lead">Trzymaj wszystkie swoje przepisy w jednym miejscu! :)</p>
                </div>
            </div>
    -->
        <!-- breadcrumb and tabs-->
        <ul class="nav nav-tabs ">
            <li class="nav-item">
                <a class="nav-link active" href="#">Strona glowna</a>
            </li>
            <li class="nav-item">
                
                @Html.ActionLink("Moje przepisy", "Index", "Recipe", new { area = "" }, new { @class = "nav-link text-info" })
            </li>
            <li class="nav-item">
                <a class="nav-link text-info" href="#">Ulubione</a>
            </li>
            <li class="nav-item">
                @Html.ActionLink("+Dodaj przepis", "Create", "Recipe", new { area = "" }, new { @class = "nav-link text-info" })
                
            </li>
        </ul>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" class="text-info">Home</a></li>
                <li class="breadcrumb-item"><a href="#" class="text-info">Library</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data</li>
            </ol>
        </nav>

        @RenderBody()
        <hr />

    </div>
    <!-- footer -->
    <footer>
        <nav class="navbar navbar-light bg-info fixed-bottom">
            <a class="navbar-brand" href="#">link</a>
            &copy; @DateTime.Now.Year - Przepisnik
        </nav>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
